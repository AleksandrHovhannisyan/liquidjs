{
  "extends": "standard",
  "env": {
    "mocha": true,
    "es6": true,
    "browser": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "mocha",
    "standard",
    "@typescript-eslint",
    "promise"
  ],
  "rules": {
    "no-var": 2,
    "prefer-const": 2
  }
}
