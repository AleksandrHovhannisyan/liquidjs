{
  "compilerOptions": {
    "target": "es5",
    "module":"CommonJS",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "paths": {
      "src/fs": ["src/fs/node"],
      "src/*": ["src/*"],
      "test/*": ["test/*"]
    }
  },
  "include": [ "src", "test" ],
  "exclude": [ "node_modules", "dist" ]
}
